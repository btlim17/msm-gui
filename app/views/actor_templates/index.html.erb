<h1>
  List of all actors
</h1>

<hr>
  <form action = "/insert_actor" method = "post">
  <div><label for="name_input">Name</label>
  <input id = "name_input" type = "text" name = "name"></div>
  <div><label for="Dob_input">Dob</label>
  <input id = "Dob_input" type = "date" name = "dob"></div>
  <div><label for="bio_input">Bio</label>
  <input id = "bio_input" type = "text" name = "bio"></div>
  <div><label for="image_input">image</label>
  <input id = "image_input" type="text" name = "image"></div>
  <button>Create actor</button>
<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
