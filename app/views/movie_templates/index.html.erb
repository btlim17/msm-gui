<h1>
  List of all movies
</h1>

<hr>
  <form action = "/create_movies" method = "post">
  <div><label for="title_input">Title</label>
  <input id = "title_input" type = "text" name = "title"></div>
  <div><label for="year_input">Year</label>
  <input id = "year_input" type = "date" name = "year"></div>
  <div><label for="duration_input">Duration</label>
  <input id = "duration_input" type = "text" name = "duration"></div>
   <div><label for="description_input">Description</label>
  <input id = "description_input" type = "text" name = "description"></div>
  <div><label for="image_input">Image</label>
  <input id = "image_input" type="text" name = "image"></div>
  <div><label for="director_id_input">Director ID</label>
  <input id = "director_id_input" type="text" name = "director_id"></div>
  <button>Create director</button>
  </form>
<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

       
    <% the_director = matching_directors.at(0) %>
    <% if the_director == nil %>
      Uh oh! We weren't able to find a director for this movie.
      <% else %>
        <%= the_director.name %>
      <% end %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
