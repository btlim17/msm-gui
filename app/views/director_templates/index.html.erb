<h1>
  List of all directors
</h1>

<hr>
  <form action = "/create_director" method = "post">
  <div><label for="name_input">Name</label>
  <input id = "name_input" type = "text" name = "name"></div>
  <div><label for="Dob_input">Dob</label>
  <input id = "Dob_input" type = "date" name = "dob"></div>
  <div><label for="bio_input">Bio</label>
  <input id = "bio_input" type = "text" name = "bio"></div>
  <div><label for="image_input">Image</label>
  <input id = "image_input" type="text" name = "image"></div>
  <button>Create director</button>
  </form>
<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
